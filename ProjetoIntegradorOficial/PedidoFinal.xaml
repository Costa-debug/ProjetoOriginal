<Page x:Class="ProjetoIntegradorOficial.PedidoFinal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorOficial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PedidoFinal">

    <Grid>
        <Image HorizontalAlignment="Left" Height="446" VerticalAlignment="Bottom" Width="797" Source="/9.png" Margin="0,0,0,4"/>

        <Image HorizontalAlignment="Left" Height="446" VerticalAlignment="Bottom" Width="797" Source="/9.png" Margin="0,0,0,4"/>
        <DataGrid x:Name="dgPedidoFinal" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="18" Margin="57,225,66,50" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="*"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="Auto"/>
                <DataGridTextColumn Header="Preço Unitário" Binding="{Binding Preco}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="tb_NomeCliente" HorizontalAlignment="Left" Margin="57,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="25"/>
        <TextBox x:Name="tb_TelefoneCliente" HorizontalAlignment="Left" Margin="530,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="25"/>


    </Grid>
</Page>
