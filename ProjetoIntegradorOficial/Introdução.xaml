<Page x:Class="ProjetoIntegradorOficial.Introdução"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorOficial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cadastro">

    <Grid>
            <Image Stretch="Fill" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/2.png"/>
        <Canvas Width="800" Height="450">
            <TextBox x:Name="tb_Nome" HorizontalAlignment="Left" Margin="447,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" Height="29" BorderBrush="Black">
                <TextBox.Background>
                    <ImageBrush/>
                </TextBox.Background>
            </TextBox>
            <Label Content="Nome:" HorizontalAlignment="Left" Margin="436,106,0,0" VerticalAlignment="Top"/>
            <Label Content="Telefone:" HorizontalAlignment="Left" Margin="436,198,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Telefone" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="181" Height="29" BorderBrush="Black" Margin="447,229,0,0">
                <TextBox.Background>
                    <ImageBrush/>
                </TextBox.Background>
            </TextBox>
            <Button Content="Cadastrar" HorizontalAlignment="Center" Margin="454,302,0,0" VerticalAlignment="Center" Height="63" Width="166" Background="#FFDEB881" Click="Button_Click"/>

        </Canvas>
    </Grid>
</Page>
