<Page x:Class="ProjetoIntegradorOficial.Cardápio2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorOficial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cardápio2">

    <Viewbox Stretch="Fill">
        <Grid Width="800" Height="450">
            <Image Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/5.png" RenderTransformOrigin="0.542,0.51"/>
            <CheckBox x:Name="XCoração" Content="" HorizontalAlignment="Left" Margin="443,172,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.571,0.99" Checked="XCoração_Checked" Unchecked="XCoração_Checked"/>
            <CheckBox x:Name="XEntrevero" Content="" HorizontalAlignment="Left" Margin="443,243,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.571,0.99" Checked="XEntrevero_Checked" Unchecked="XEntrevero_Checked"/>
            <CheckBox x:Name="XVegetal" Content="" HorizontalAlignment="Left" Margin="443,313,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.571,0.99" Checked="XVegetal_Checked" Unchecked="XVegetal_Checked"/>
            <TextBox x:Name="tb_XCoração" HorizontalAlignment="Left" Margin="465,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="19" Text="1" TextChanged="XCoraçãoQt"/>
            <TextBox x:Name="tb_XEntrevero" HorizontalAlignment="Left" Margin="465,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="19" Text="1" TextChanged="XEntreveroQt"/>
            <TextBox x:Name="tb_XVegetal" HorizontalAlignment="Left" Margin="465,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="19" Text="1" TextChanged="XVegetalQt"/>
            <Button x:Name="Button_Porções" Content="Porções" HorizontalAlignment="Left" Margin="630,380,0,0" VerticalAlignment="Top" Height="48" Width="136" Background="#FFE4B100" Click="Button_Porções_Click" FontSize="16" />
            <Button x:Name="Button_Finalisar2" Content="Finalizar" HorizontalAlignment="Left" Margin="632,32,0,0" VerticalAlignment="Top" Height="48" Width="134" Background="#FFE4B100" Click="Button_Finalisar2_Click" FontSize="16" />
            <Button x:Name="Button_Voltar1" Content="Voltar" HorizontalAlignment="Left" Margin="22,380,0,0" VerticalAlignment="Top" Height="48" Width="134" Background="#FFE4B100" Click="Button_Voltar1_Click" FontSize="16"/>

        </Grid>
    </Viewbox>
</Page>
