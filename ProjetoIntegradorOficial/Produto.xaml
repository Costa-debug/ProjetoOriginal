<Page x:Class="ProjetoIntegradorOficial.Produto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorOficial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Produto">

    <Viewbox Stretch="Fill">
        <Grid Width="800" Height="450">
            <Image HorizontalAlignment="Left" Height="445" VerticalAlignment="Top" Width="793" Margin="2,0,0,0" Source="/poi.png" RenderTransformOrigin="0.469,0.509"/>
            <Label Content="Produto:" HorizontalAlignment="Left" Margin="127,109,0,0" VerticalAlignment="Top" Width="89" FontSize="14"/>
            <TextBox x:Name="tb_ProdutoN" HorizontalAlignment="Left" Margin="127,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="39"/>
            <Label Content="Quantidade:" HorizontalAlignment="Left" Margin="444,109,0,0" VerticalAlignment="Top" Width="89" FontSize="14"/>
            <TextBox x:Name="tb_QuantidadeN" HorizontalAlignment="Left" Margin="444,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="39"/>
            <Label Content="Preço Unitário:" HorizontalAlignment="Left" Margin="127,0,0,0" VerticalAlignment="Center" Width="109" FontSize="14"/>
            <TextBox x:Name="tb_PreçoN" HorizontalAlignment="Left" Margin="127,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="39"/>
            <Label Content="Data de Validade:" HorizontalAlignment="Left" Margin="444,0,0,0" VerticalAlignment="Center" Width="125" FontSize="14"/>
            <DatePicker x:Name="dt_Validade" HorizontalAlignment="Left" Height="29" Margin="444,249,0,0" VerticalAlignment="Top" Width="218" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button x:Name="Button_Back" Content="Cancelar" HorizontalAlignment="Left" Margin="151,330,0,0" VerticalAlignment="Top" Height="55" Width="159"  Background="#FFFF5B5B" FontSize="16" Click="Button_Adm"/>
            <Button x:Name="Button_Concluir" Content="Cadastrar Produto" HorizontalAlignment="Left" Margin="442,320,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.513,0.552" Height="65" Width="220" FontSize="20" Background="#FF4CDE19" Click="Button_Concluir_Click"/>

        </Grid>
    </Viewbox>
</Page>
