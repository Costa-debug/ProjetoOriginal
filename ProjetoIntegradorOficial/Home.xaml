<Page x:Class="ProjetoIntegradorOficial.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorOficial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Viewbox Stretch="Fill">
        <Grid Width="800" Height="450">
            <Button x:Name="apresentação" Content="" HorizontalAlignment="Left" Margin="60,358,0,0" VerticalAlignment="Top" Height="66" Width="145" Background="#FF484343" BorderBrush="{x:Null}">
                <Button.OpacityMask>
                    <ImageBrush/>
                </Button.OpacityMask>
            </Button>
            <Image Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/Mc dos Lanche.png"/>
            <Button x:Name="CapaButton" Content="" HorizontalAlignment="Left" Margin="60,358,0,0" VerticalAlignment="Top" Height="55" Width="145" Click="CapaButton_Click">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
        </Grid>
    </Viewbox>
</Page>
